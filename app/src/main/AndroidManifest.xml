<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Basis-Berechtigungen -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Storage f체r Android 12 und 채lter -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    
    <!-- Storage f체r Android 13+ -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    
    <!-- WICHTIG: Manage External Storage f체r Android 11+ -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    
    <!-- Google Advertising ID -->
    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="31">
        
        <!-- MainActivity als neuer Launcher -->
        <activity 
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Andere Activities (ohne LAUNCHER Intent-Filter) -->
        <activity
            android:name=".activities.AccountDetailActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.EventDetailActivity"
            android:exported="false" />
        
        <!-- Alte Activities bleiben vorerst (werden in Phase 3 entfernt) -->
        <activity
            android:name=".AccountManagementActivity"
            android:exported="false" />
        
        <activity
            android:name=".PartnerEventActivity"
            android:exported="false" />
        
        <activity
            android:name=".FriendshipActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.AccountListActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.AccountDetailActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.EventListActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.EventDetailActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.TycoonRacersActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.CustomersActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.SettingsActivity"
            android:exported="false" />
    </application>

</manifest>
