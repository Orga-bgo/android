<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            
            <!-- Customer Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        android:text="Kundeninformationen"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp" />
                    
                    <!-- Customer Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        
                        <TextView
                            android:text="Name:"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content" />
                        
                        <TextView
                            android:id="@+id/tv_customer_name"
                            android:text="Kunde"
                            android:textSize="14sp"
                            android:textColor="@color/text_dark"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    
                    <!-- Notes -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        
                        <TextView
                            android:text="Notizen:"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content" />
                        
                        <TextView
                            android:id="@+id/tv_customer_notes"
                            android:text="Keine Notizen"
                            android:textSize="14sp"
                            android:textColor="@color/text_dark"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    
                    <!-- Account Count -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        
                        <TextView
                            android:text="Accounts:"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content" />
                        
                        <TextView
                            android:id="@+id/tv_account_count"
                            android:text="0"
                            android:textSize="14sp"
                            android:textColor="@color/text_dark"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    
                    <!-- Services -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <TextView
                            android:text="Services:"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content" />
                        
                        <TextView
                            android:id="@+id/tv_services_display"
                            android:text="-"
                            android:textSize="14sp"
                            android:textColor="@color/text_dark"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <!-- Accounts Section -->
            <TextView
                android:text="Accounts"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />
            
            <TextView
                android:id="@+id/tv_no_accounts"
                android:text="Keine Accounts vorhanden"
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_customer_accounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />
            
            <!-- Activity History Section -->
            <TextView
                android:text="Aktivitätsverlauf"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />
            
            <TextView
                android:id="@+id/tv_no_activities"
                android:text="Keine Aktivitäten vorhanden"
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_customer_activities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp" />
            
        </LinearLayout>
    </ScrollView>
    
    <!-- Floating Action Buttons -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_edit_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="@string/edit_customer"
        android:src="@android:drawable/ic_menu_edit"
        app:backgroundTint="@color/primary_blue"
        app:tint="@android:color/white" />
    
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_account"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@color/success_green"
        app:tint="@android:color/white" />
    
</androidx.coordinatorlayout.widget.CoordinatorLayout>
