<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginBottom="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_internal_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Notiz -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notiz (optional)"
        android:layout_marginBottom="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="3"
            android:gravity="top" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- FB-Token Checkbox -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#E3F2FD"
        app:strokeWidth="1dp"
        app:strokeColor="#90CAF9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <CheckBox
                android:id="@+id/cb_include_fb_token"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FB-Token sichern?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1E3A5F" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sichert Facebook-Login Informationen (com.facebook.AccessTokenManager.SharedPreferences.xml)"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                android:paddingStart="32dp"
                android:paddingEnd="0dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Info Box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/info_background_light"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“¦ Gesicherte Dateien:"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#1E3A5F"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœ“ Account-Daten (IMMER)\nâœ“ Device-IDs (falls vorhanden)\nâœ“ Spieler-Einstellungen (falls vorhanden)\nâœ“ Mod-Einstellungen (falls vorhanden)"
            android:textSize="11sp"
            android:textColor="#666666"
            android:lineSpacingExtra="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nðŸ’¾ Backup wird als ZIP-Archiv gespeichert"
            android:textSize="11sp"
            android:textColor="#1E88E5"
            android:textStyle="italic" />

    </LinearLayout>

</LinearLayout>
