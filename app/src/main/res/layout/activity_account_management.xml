<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accountverwaltung"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_restore_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account wiederherstellen"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_backup_own"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eigenen Account sichern"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_backup_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kunden Account sichern"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_copy_links"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kopiere Links"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:layout_marginBottom="24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bereit"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="#F0F0F0" />
    </ScrollView>

</LinearLayout>
