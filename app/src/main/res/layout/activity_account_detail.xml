<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <!-- Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/header_dark"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">
                
                <!-- Account Name -->
                <TextView
                    android:id="@+id/tv_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BGO_Account"
                    android:textSize="24sp"
                    android:textColor="@color/primary_blue"
                    android:textStyle="bold" />
                
                <!-- User ID -->
                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MoGo User ID: xxxxxxxx"
                    android:textSize="14sp"
                    android:textColor="@color/text_light_gray"
                    android:layout_marginTop="4dp" />
                
                <!-- Last Played -->
                <TextView
                    android:id="@+id/tv_last_played_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zuletzt gespielt:"
                    android:textSize="13sp"
                    android:textColor="@color/text_light_gray"
                    android:layout_marginTop="12dp" />
                
                <TextView
                    android:id="@+id/tv_last_played"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.01.2024 - 14:30 Uhr"
                    android:textSize="16sp"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        
        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            
            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                
                <Button
                    android:id="@+id/btn_restore"
                    style="@style/BabixButton.Blue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Wiederherstellen" />
                
                <Button
                    android:id="@+id/btn_edit"
                    style="@style/BabixButton.Gray"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="Edit" />
                
                <Button
                    android:id="@+id/btn_delete"
                    style="@style/BabixButton.Red"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Löschen" />
            </LinearLayout>
            
            <!-- Friend Link Section -->
            <com.google.android.material.card.MaterialCardView
                style="@style/BabixCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        style="@style/LabelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Freundschaftslink" />
                    
                    <TextView
                        android:id="@+id/tv_short_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="https://mogo.link/xxxxx"
                        android:textSize="14sp"
                        android:textColor="@color/primary_blue"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp" />
                    
                    <TextView
                        style="@style/LabelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Freundschaftscode" />
                    
                    <TextView
                        android:id="@+id/tv_friend_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABC-123-XYZ"
                        android:textSize="16sp"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <!-- Status Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:background="@color/status_box_bg"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suspendiert"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray" />
                    
                    <TextView
                        android:id="@+id/tv_suspension_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 3 7 X"
                        android:textSize="16sp"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Error"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray" />
                    
                    <TextView
                        android:id="@+id/tv_error_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ja"
                        android:textSize="16sp"
                        android:textColor="@color/error_red"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
            
            <!-- Device IDs Section -->
            <com.google.android.material.card.MaterialCardView
                style="@style/BabixCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Geräte-IDs"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="12dp" />
                    
                    <TextView
                        style="@style/LabelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SSAID" />
                    
                    <TextView
                        android:id="@+id/tv_ssaid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8f3a92b1c0e4..."
                        android:textSize="13sp"
                        android:textColor="@color/text_dark"
                        android:fontFamily="monospace"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp" />
                    
                    <TextView
                        style="@style/LabelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GAID" />
                    
                    <TextView
                        android:id="@+id/tv_gaid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ad55-0012-99bb-ff32"
                        android:textSize="13sp"
                        android:textColor="@color/text_dark"
                        android:fontFamily="monospace"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp" />
                    
                    <TextView
                        style="@style/LabelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Device ID" />
                    
                    <TextView
                        android:id="@+id/tv_device_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEV-9900-X100"
                        android:textSize="13sp"
                        android:textColor="@color/text_dark"
                        android:fontFamily="monospace"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <!-- Back Button -->
            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Zurück zur Liste"
                android:textSize="14sp"
                android:textColor="@color/primary_blue"
                android:padding="12dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
