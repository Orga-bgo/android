<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header mit Gradient -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="babixGO"
                android:textColor="#FFFFFF"
                android:textSize="48sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verwalten Sie Ihre Accounts sicher und einfach"
                android:textColor="#E0E0E0"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textAlignment="center" />

        </LinearLayout>

        <!-- Accounts Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Titel -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accounts"
                    android:textColor="#1E3A5F"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="4dp"
                    android:background="#2196F3"
                    android:layout_marginBottom="24dp" />

                <!-- Status Indikatoren -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘¤ "
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_account_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 Accounts\nvorhanden"
                            android:textColor="#666666"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ›¡ï¸ "
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_security_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sicherheitsstatus:\nAktiv"
                            android:textColor="#666666"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Action Buttons -->
                
                <!-- Wiederherstellen Button (GrÃ¼n) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_restore_account"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Account wiederherstellen"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/gradient_green"
                    app:icon="@drawable/ic_restore"
                    app:iconTint="#FFFFFF"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="2dp" />

                <!-- Sichern Button (Blau) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_backup_account"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Account sichern"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/gradient_blue"
                    app:icon="@drawable/ic_save"
                    app:iconTint="#FFFFFF"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="2dp" />

                <!-- LÃ¶schen Button (Orange) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_delete_account"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Account lÃ¶schen"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/gradient_orange"
                    app:icon="@drawable/ic_delete"
                    app:iconTint="#FFFFFF"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="2dp" />

                <!-- Bearbeiten Button (Lila) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_edit_account"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Account bearbeiten"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/gradient_purple"
                    app:icon="@drawable/ic_edit"
                    app:iconTint="#FFFFFF"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    android:elevation="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Info Bereich -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/info_background"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â„¹ï¸ "
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Informationen zur Account-Verwaltung"
                android:textColor="#1E3A5F"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
